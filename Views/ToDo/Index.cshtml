@model List<TodoApp.Models.TodoTask>

<h2>To-Do List</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add Task</a>

<table class="table">
    <thead><tr><th>Date</th><th>Task</th><th>Done</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr class="@(task.IsDone ? "table-success" : "")">
                <td>@task.Date.ToShortDateString()</td>
                <td style="@(task.IsDone ? "text-decoration:line-through" : "")">@task.Name</td>
                <td>
                    <a asp-action="ToggleDone" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                        @(task.IsDone ? "✔" : "✘")
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
